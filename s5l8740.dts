/*
 * Apple S5L8740 SoC
 *
 * Other Names: N31
 */
/dts-v1/;

/ {
    #address-cells = <1>;
	#size-cells = <1>;
    model = "Apple iPod Nano (7th Geneneration)";
    compatible = "apple,n31", "samsung,s5l8740";

    aliases {
		serial0 = &uart3;
        console = &uart3;
	};

    chosen {
        stdout-path = "serial0";
    };

    clkref: clock-ref {
        compatible = "fixed-clock";
        #clock-cells = <0>;
        clock-frequency = <24000000>;
        clock-output-names = "clkref";
    };

    cpus {
        #address-cells = <1>;
        #size-cells = <0>;
        
        cpu@0 {
			device_type = "cpu";
            reg = <0>;
			compatible = "arm,cortex-a5";
		};
    };

    memory {
        device_type = "memory";
        reg = <0x08000000 0x04000000>;
    };

    soc {
        compatible = "simple-bus";
        #address-cells = <1>;
		#size-cells = <1>;
        ranges;

        vic0: interrupt-controller@38e00000 {
            compatible = "arm,pl192-vic";
            interrupt-controller;
            reg = <0x38e00000 0x1000>;
            #interrupt-cells = <1>;
        };

        vic1: interrupt-controller@38e01000 {
            compatible = "arm,pl192-vic";
            interrupt-controller;
            reg = <0x38e01000 0x1000>;
            #interrupt-cells = <1>;
        };

        timer_f: timer@3c7000c0 {
            compatible = "samsung,s5l87xx-pwm";
            reg = <0x3c700000 0x20000>;
            interrupt-parent = <&vic0>;
            interrupts = <7>;
        };

        uart3: uart@3dd00000 {
            compatible = "apple,s5l-uart";
            reg = <0x3dd00000 0x3c>;
            id = <0>;
            clocks = <&clkref>, <&clkref>;
            clock-names = "uart", "clk_uart_baud0";
            reg-io-width = <4>;
            interrupt-parent = <&vic0>;
            interrupts = <27>;
            status = "okay";
        };
        
        usbphy: usbphy@3c400000 {
            compatible = "apple,s5l8730-otgphy";
            reg = <0x3c400000 0x100>;
            status = "okay";
            #phy-cells = <0>;
        };

        usbotg_hs: usb@38400000 {
		    compatible = "apple,s5l8702-usb";
		    reg = <0x38400000 0x40000>;
		    interrupt-parent = <&vic0>;
            interrupts = <19>;
            phys = <&usbphy>;
            phy-names = "usb2-phy";
		    clocks = <&clkref>;
		    clock-names = "otg";
            g-rx-fifo-size = <256>;
            g-np-tx-fifo-size = <32>;
            g-tx-fifo-size = <256 256 512 512 512 768 768>;
		    status = "okay";
		    dr_mode = "peripheral";
        };

        lcdif: lcdif@38300000 {
            compatible = "samsung,s5l8740-lcdif";
            reg = <0x38300000 0x10000>, <0x3D800000 0x10000>;
        };

    };
};
